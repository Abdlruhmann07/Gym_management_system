<!-- membershipPlans.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership Plans</title>
</head>
<body>
    <h1>Membership Plans</h1>
    <ul>
        <% memberships.forEach(plan => { %>
            <li>
                <strong><%= plan.name %></strong> - <%= plan.description %> - Price: <%= plan.price %>
                <form action="/api/v1/member/memberships/join-plan/<%= plan._id %>" method="post">
                    <input type="hidden" name="method" value="creditCard"> <!-- Example payment method -->
                    <button type="submit">Join</button>
                </form>
            </li>
        <% }); %>
    </ul>
</body>
</html>
